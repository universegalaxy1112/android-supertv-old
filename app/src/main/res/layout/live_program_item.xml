<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="liveProgramItem"
            type="com.livetv.normal.model.LiveProgram" />
        <variable
            name="liveTVAdapter"
            type="com.livetv.normal.view.adapters.LiveTVRecyclerAdapter" />
    </data>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.livetv.normal.view.custom_views.LiveTVItemLinearLayout
        android:id="@+id/livetv_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundAlpha"
        android:focusable="true"
        android:orientation="horizontal"
        android:onClick="@{liveTVAdapter.onClickItem}">

        <LinearLayout
            android:id="@+id/live_tv_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="35"
            android:background="@color/live_tv_channel_color"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="6">

                <com.livetv.normal.view.custom_views.CustomChannelIcon
                    android:id="@+id/movie_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@color/transparent"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    app:imageUrl="@{liveProgramItem.iconUrl}" />
            </RelativeLayout>

            <TextView
                android:id="@+id/channel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:text="@{liveProgramItem.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/text_light_color"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/program_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:background="@color/live_tv_program_color"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:text="@{liveProgramItem.epg_ahora}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/text_light_color" />

        <TextView
            android:id="@+id/program_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@color/live_tv_program_color"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:text="@{liveProgramItem.epg_despues}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/text_light_color" />
    </com.livetv.normal.view.custom_views.LiveTVItemLinearLayout>

    <View
        android:id="@+id/live_tv_channel_color_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/live_tv_channel_color" />
</LinearLayout>
</layout>