<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:livetv_bg_middle">@color/colorBackground</item>-->
        <item name="android:textColorPrimary">@color/colorTextTitle</item>
    </style>

    <style name="VideoTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Details">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!---->
        <!--<item name="android:livetv_bg_middle">@color/colorPrimaryDark</item>-->
        <!--<item name="android:colorBackground">@color/colorPrimaryDark</item>-->
        <!--<item name="android:textColor">@color/colorTextTitle</item>-->
        <!--<item name="android:textColorPrimary">@color/colorTextTitle</item>-->
        <!---->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog">

        <item name="android:background">@color/colorBackground</item>
        <!--<item name="windowNoTitle">false</item>-->
        <!--<item name="android:windowFullscreen">false</item>-->

        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:livetv_bg_middle">@color/colorBackground</item>-->
        <item name="android:textColorPrimary">@color/colorTextTitle</item>
    </style>

    <!--app bar theme-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <!--<item name="android:livetv_bg_middle">@color/colorPrimaryDark</item>-->
    </style>

    <!--toolbar theme-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <!--<item name="android:livetv_bg_middle">@color/colorPrimaryDark</item>-->
        <item name="android:textColorPrimary">@color/colorTextTitle</item>
        <item name="android:textColorSecondary">@color/colorTextTitle</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>
    <style name="CustomAlertDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/netflix_red</item>
        <item name="android:textColorPrimary">@color/bg_general</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text.livetv_category_program_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="text.livetv">
        <item name="android:textColor">@color/live_category_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="text.movie_detail_title"  >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="no_channel">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
